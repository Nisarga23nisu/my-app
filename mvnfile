pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'Maven 3.8.1', type: 'Tool'
        JAVA_HOME = tool name: 'JDK 11', type: 'Tool'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout your code from the repository
                checkout scm
            }
        }

        stage('Build WAR') {
            steps {
                script {
                    // Use Maven to clean, compile, and package your app into a WAR file
                    sh "${MAVEN_HOME}/bin/mvn clean package"
                }
            }
        }

        stage('Archive WAR') {
            steps {
                // Archive the WAR file as a build artifact
                archiveArtifacts allowEmptyArchive: true, artifacts: '**/*.war', followSymlinks: false
            }
        }
    }

    post {
        success {
            echo 'Build completed successfully!'
        }

        failure {
            echo 'Build failed!'
        }
    }
}
